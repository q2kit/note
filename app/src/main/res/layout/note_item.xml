<?xml version="1.0" encoding="utf-8"?>
<!-- note_item.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border"
    android:layout_marginBottom="3dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Đây là một note..."
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/note_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_title"
        android:layout_marginTop="4dp"
        android:text="14/12/2222"
        android:textColor="#888888"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/note_updated_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_title"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/note_created_date"
        android:text="14/12/2222"
        android:textColor="#888888"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/note_sync_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sync_red"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>
